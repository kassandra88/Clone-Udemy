<h1>Edit "{{course.title}}"</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field col s6">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      value="{{course.title}}"
      required
    />
    <label for="title">Course</label>
    <span class="helper-text" data-error="Input name of course"></span>
  </div>

  <div class="input-field col s6">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      value="{{course.price}}"
      required
      min="1"
    />
    <label for="price">Price of Course</label>
    <span class="helper-text" data-error="Input price"></span>
  </div>

  <div class="input-field col s6">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      required
      value="{{course.img}}"
    />
    <label for="img">URL of image</label>
    <span class="helper-text" data-error="Input URL"></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}" />
  <button type="submit" class="btn btn-primary">Adit course</button>
</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}" />
  <button type="submit" class="btn red">Delete course</button>
</form>