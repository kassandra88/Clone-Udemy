<h1>Add new course!</h1>

<form action="/add" method="POST">
  <div class="input-field col s6">
    <input id="title" name="title" type="text" class="validate" required />
    <label for="title">Course</label>
    <span class="helper-text" data-error="Input name of course"></span>
  </div>

  <div class="input-field col s6">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
    />
    <label for="price">Price of Course</label>
    <span class="helper-text" data-error="Input price"></span>
  </div>

  <div class="input-field col s6">
    <input id="img" name="img" type="text" class="validate" required />
    <label for="img">URL of image</label>
    <span class="helper-text" data-error="Input URL"></span>
  </div>
  <button class="btn btn-primary">Add course</button>
</form>