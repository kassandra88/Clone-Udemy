<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'><a class='active' href='#login'>Log in</a></li>
        <li class='tab col s6'><a href='#register'>Registration</a></li>
      </ul>
    </div>
    <div id='login' class='col s6 offset-s3'>

      <form action='/auth/login' method='POST'>
        <h3>Please, log in!</h3>
        <div class='input-field'>
          <input
            id='email'
            name='email'
            type='email'
            class='validate'
            required
          />
          <label for='email'>Email</label>
          <span class='helper-text' data-error='Input your email'></span>
        </div>

        <div class='input-field'>
          <input
            id='password'
            name='password'
            type='password'
            class='validate'
            required
          />
          <label for='password'>Password</label>
          <span class='helper-text' data-error='Input your password'></span>
        </div>

        <button class='btn btn-primary' type='submit'>Log in</button>
      </form>
    </div>
    <div id='register' class='col s6 offset-s3'>

      <form action='auth/register' method='POST'>
        <h3> Please, registrate!</h3>
        <div class='input-field'>
          <input
            id='remail'
            name='email'
            type='email'
            class='validate'
            required
          />
          <label for='remail'>Email</label>
          <span class='helper-text' data-error='Input your email'></span>
        </div>

        <div class='input-field'>
          <input
            id='rpassword'
            name='password'
            type='password'
            class='validate'
            required
          />
          <label for='rpassword'>Password</label>
          <span class='helper-text' data-error='Input your password'></span>
        </div>
        <div class='input-field'>
          <input
            id='confirm'
            name='confirm'
            type='password'
            class='validate'
            required
          />
          <label for='confirm'>Confirm Your Password</label>
          <span
            class='helper-text'
            data-error='Input your password one more time'
          ></span>
        </div>

        <div class='input-field'>
          <input id='name' name='name' type='text' class='validate' required />
          <label for='name'>Input your name</label>
          <span class='helper-text' data-error='Input your name'></span>
        </div>

        <button class='btn btn-primary' type='submit'>Registration</button>
      </form>
    </div>
  </div>
</div>